<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#9000D4FF"
                android:endColor="#6000D4FF" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#00D4FF" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#45FFFFFF"
                android:endColor="#25FFFFFF" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1.5dp"
                android:color="#50FFFFFF" />
        </shape>
    </item>
</selector>
