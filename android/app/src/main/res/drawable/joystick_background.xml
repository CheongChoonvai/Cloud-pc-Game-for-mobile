<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow effect -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:startColor="#1500D4FF"
                android:endColor="#00000000" />
        </shape>
    </item>
    <!-- Main joystick area -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:startColor="#30FFFFFF"
                android:endColor="#15FFFFFF" />
            <stroke
                android:width="2dp"
                android:color="#4000D4FF" />
        </shape>
    </item>
    <!-- Inner highlight -->
    <item android:left="20dp" android:right="20dp" android:top="20dp" android:bottom="20dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:startColor="#25FFFFFF"
                android:endColor="#10FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#30FFFFFF" />
        </shape>
    </item>
</layer-list>
