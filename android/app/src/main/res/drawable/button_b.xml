<?xml version="1.0" encoding="utf-8"?>
<!-- Xbox B Button - Red -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:startColor="#CCFF1744"
                android:endColor="#90FF1744" />
            <stroke android:width="2dp" android:color="#FF5252" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:startColor="#60FF1744"
                android:endColor="#30FF1744" />
            <stroke android:width="1.5dp" android:color="#70FF1744" />
        </shape>
    </item>
</selector>
