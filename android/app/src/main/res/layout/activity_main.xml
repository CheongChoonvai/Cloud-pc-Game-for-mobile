<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Video Stream View (WebRTC) -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/videoView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connecting..."
        android:textColor="#88FF88"
        android:textSize="14sp"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top Center - Status Indicator -->
    <TextView
        android:id="@+id/gamepadStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âŒ"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gamepad Controls Layer -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gamepadOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- ========== LEFT SIDE ========== -->
        
        <!-- LT (Top Left) -->
        <Button
            android:id="@+id/btnLT"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:text="LT"
            android:textSize="11sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_shoulder"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- LB -->
        <Button
            android:id="@+id/btnLB"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:text="LB"
            android:textSize="11sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_shoulder"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/btnLT"
            app:layout_constraintTop_toBottomOf="@id/btnLT" />

        <!-- Left Joystick -->
        <View
            android:id="@+id/leftTouchArea"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/joystick_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L"
            android:textColor="#40FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/leftTouchArea"
            app:layout_constraintEnd_toEndOf="@id/leftTouchArea"
            app:layout_constraintStart_toStartOf="@id/leftTouchArea"
            app:layout_constraintTop_toTopOf="@id/leftTouchArea" />

        <!-- D-Pad (Bottom Left) -->
        <Button
            android:id="@+id/btnDpadUp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="â–²"
            android:textSize="14sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_circle"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/btnDpadLeft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="â—€"
            android:textSize="14sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_circle"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/btnDpadUp"
            app:layout_constraintTop_toBottomOf="@id/btnDpadUp"
            app:layout_constraintBottom_toTopOf="@id/btnDpadDown" />

        <Button
            android:id="@+id/btnDpadRight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="â–¶"
            android:textSize="14sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_circle"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/btnDpadUp"
            app:layout_constraintTop_toBottomOf="@id/btnDpadUp"
            app:layout_constraintBottom_toTopOf="@id/btnDpadDown" />

        <Button
            android:id="@+id/btnDpadDown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="â–¼"
            android:textSize="14sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_circle"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="@id/btnDpadUp"
            app:layout_constraintEnd_toEndOf="@id/btnDpadUp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- ========== CENTER ========== -->

        <!-- Menu Buttons (Select/Start) -->
        <Button
            android:id="@+id/btnSelect"
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:text="â˜°"
            android:textSize="12sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_circle"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/btnStart"
            app:layout_constraintTop_toTopOf="@id/btnStart" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:text="â–¶"
            android:textSize="12sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_circle"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:text="âš™"
            android:textSize="12sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_circle"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/btnStart"
            app:layout_constraintTop_toTopOf="@id/btnStart" />

        <!-- ========== RIGHT SIDE ========== -->

        <!-- RT (Top Right) -->
        <Button
            android:id="@+id/btnRT"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:text="RT"
            android:textSize="11sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_shoulder"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- RB -->
        <Button
            android:id="@+id/btnRB"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:text="RB"
            android:textSize="11sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_shoulder"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@id/btnRT"
            app:layout_constraintTop_toBottomOf="@id/btnRT" />

        <!-- ABXY Buttons (Diamond) -->
        <Button
            android:id="@+id/btnY"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="Y"
            android:textSize="16sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_circle"
            android:layout_marginEnd="58dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnX"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="X"
            android:textSize="16sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_circle"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/btnY"
            app:layout_constraintTop_toBottomOf="@id/btnY"
            app:layout_constraintBottom_toTopOf="@id/btnA" />

        <Button
            android:id="@+id/btnB"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="B"
            android:textSize="16sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_circle"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/btnY"
            app:layout_constraintTop_toBottomOf="@id/btnY"
            app:layout_constraintBottom_toTopOf="@id/btnA" />

        <Button
            android:id="@+id/btnA"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="A"
            android:textSize="16sp"
            android:textColor="#AAFFFFFF"
            android:background="@drawable/button_circle"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/btnY"
            app:layout_constraintEnd_toEndOf="@id/btnY"
            app:layout_constraintTop_toBottomOf="@id/btnY" />

        <!-- Right Joystick (Bottom Right) -->
        <View
            android:id="@+id/rightTouchArea"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/joystick_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R"
            android:textColor="#40FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/rightTouchArea"
            app:layout_constraintEnd_toEndOf="@id/rightTouchArea"
            app:layout_constraintStart_toStartOf="@id/rightTouchArea"
            app:layout_constraintTop_toTopOf="@id/rightTouchArea" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Connection Screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/connectionOverlay"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@drawable/dialog_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â˜ï¸ Cloud Game"
            android:textColor="#00D4FF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter server IP or scan QR"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

        <EditText
            android:id="@+id/ipInput"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="192.168.1.100"
            android:text="192.168.1.10"
            android:textColorHint="#666666"
            android:textColor="#FFFFFF"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:inputType="text"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitleText" />

        <Button
            android:id="@+id/connectButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="Connect"
            android:textColor="#FFFFFF"
            android:backgroundTint="#00C853"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ipInput" />

        <Button
            android:id="@+id/scanQrButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="ðŸ“· Scan QR"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/connectButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
